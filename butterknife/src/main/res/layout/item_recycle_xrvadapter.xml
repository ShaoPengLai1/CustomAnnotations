<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_img"
        android:layout_width="160dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        fresco:roundedCornerRadius="60dp"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="false"
        fresco:roundWithOverlayColor="#ffffff"
        fresco:roundingBorderWidth="1dp"
        fresco:roundingBorderColor="#ffffff"
        />
    <TextView
        android:id="@+id/simple_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/simple_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/simple_img"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="3"
        />
    <TextView
        android:id="@+id/simple_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simple_title"
        app:layout_constraintRight_toRightOf="@id/simple_img"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ff0000"
        />
</android.support.constraint.ConstraintLayout>